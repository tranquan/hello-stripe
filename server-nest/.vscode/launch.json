  "version": "0.2.0",
  "configurations": [
    {
      // Ref: https://stackoverflow.com/a/71712863/1813861
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug",
      ],
      "cwd": "${workspaceRoot}",
      "console": "internalConsole",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ],
    }
  ]
}
